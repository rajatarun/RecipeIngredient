<?xml version='1.0' encoding='utf-8'?>
<widget id="io.search.recipesearch" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Recipe Search</name>
    <description>
        Search Recipes from ingredients
    </description>
    <author email="rajatarun12@gmail.com" href="http://cordova.io">
        Tarun Raja, Navya Sanjana Koukuntla
    </author>
    <icon density="mdpi" platform="android" src="res/icon/android/icon-48-mdpi.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <engine name="browser" spec="^5.0.3" />
    <engine name="osx" spec="^4.0.1" />
    <engine name="ios" spec="^4.5.4" />
    <engine name="android" spec="^7.0.0" />
</widget>
