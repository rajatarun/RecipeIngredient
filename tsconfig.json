{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "../node_modules/@types"  /// - here - types are pointing to this @types folder inside node_modules.
    ],
    "target": "es5",
    "lib": [
      "es2017.string",
      "es2017",
      "dom"
    ]
  }
}
